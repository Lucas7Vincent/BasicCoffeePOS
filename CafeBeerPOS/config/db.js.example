const sql = require('mssql');

// âš ï¸ IMPORTANT: Copy file nÃ y thÃ nh db.js vÃ  thay Ä‘á»•i credentials
// cp db.js.example db.js

const config = {
  user: process.env.DB_USER || 'your_database_user',
  password: process.env.DB_PASSWORD || 'your_database_password',
  server: process.env.DB_SERVER || 'localhost', 
  database: process.env.DB_DATABASE || 'CafeBeer',
  options: {
    encrypt: process.env.DB_ENCRYPT === 'true' || false,
    enableArithAbort: true,
    useUTC: false,
    dateFormat: 'mdy',
    trustServerCertificate: process.env.DB_TRUST_CERT === 'true' || true
  },
  pool: {
    max: parseInt(process.env.DB_POOL_MAX) || 10,
    min: parseInt(process.env.DB_POOL_MIN) || 0,
    idleTimeoutMillis: parseInt(process.env.DB_IDLE_TIMEOUT) || 30000
  },
  connectionTimeout: parseInt(process.env.DB_CONN_TIMEOUT) || 15000,
  requestTimeout: parseInt(process.env.DB_REQ_TIMEOUT) || 30000
};

const pool = new sql.ConnectionPool(config);
let poolConnect;

const connectWithRetry = async () => {
  try {
    poolConnect = await pool.connect();
    console.log('âœ… Connected to SQL Server successfully');
    
    const result = await pool.request().query(`
      SELECT 
        GETDATE() as localTime,
        GETUTCDATE() as utcTime,
        SYSDATETIMEOFFSET() as timeWithOffset,
        DATEDIFF(HOUR, GETUTCDATE(), GETDATE()) as timezoneOffset
    `);
    
    console.log('ðŸ•’ Database timezone info:', result.recordset[0]);
    
    return poolConnect;
  } catch (err) {
    console.error('âŒ Database connection failed:', err);
    console.log('ðŸ”„ Retrying connection in 5 seconds...');
    
    setTimeout(() => {
      connectWithRetry();
    }, 5000);
    
    throw err;
  }
};

process.on('SIGINT', async () => {
  console.log('ðŸ”„ Closing database connection...');
  await pool.close();
  console.log('âœ… Database connection closed');
  process.exit(0);
});

module.exports = {
  sql,
  pool,
  connect: connectWithRetry
};

